<Window x:Class="MainApp.Views.RestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="休息提醒" 
        Height="720" 
        Width="1280"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">

    <Border CornerRadius="20" 
            Background="#1E1E2E" 
            BorderBrush="#6C7086" 
            BorderThickness="3">
        <Grid>
            <!-- 背景动画 -->
            <Grid.Background>
                <RadialGradientBrush GradientOrigin="0.5,0.5">
                    <GradientStop Color="#313244" Offset="0"/>
                    <GradientStop Color="#1E1E2E" Offset="0.8"/>
                </RadialGradientBrush>
            </Grid.Background>

            <!-- 装饰性元素 -->
            <Ellipse Width="600" Height="600" Stroke="#CBA6F7" StrokeThickness="1" Opacity="0.1" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <RotateTransform Angle="45"/>
                </Ellipse.RenderTransform>
            </Ellipse>

            <Ellipse Width="400" Height="400" Stroke="#89B4FA" StrokeThickness="1" Opacity="0.1" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <RotateTransform Angle="30"/>
                </Ellipse.RenderTransform>
            </Ellipse>

            <!-- 主内容区域 -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- 标题 -->
                <TextBlock Text="休息提醒" 
                           FontSize="42" 
                           FontWeight="Bold" 
                           Foreground="#CDD6F4" 
                           Margin="0,0,0,30"
                           HorizontalAlignment="Center"/>

                <!-- 主要提示 -->
                <TextBlock Text="你已经连续使用电脑四十五分钟了，请休息一下。" 
                           FontSize="32" 
                           Foreground="#A6ADC8" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,50"
                           HorizontalAlignment="Center"/>

                <!-- 计时器 -->
                <Grid>
                    <TextBlock x:Name="TimerText" 
                               Text="休息时间: 00:00" 
                               FontSize="36" 
                               FontWeight="Bold"
                               Foreground="#74C7EC" 
                               HorizontalAlignment="Center"/>

                    <!-- 装饰性动画 -->
                    <Ellipse Width="300" Height="300" Stroke="#74C7EC" StrokeThickness="1" 
                             StrokeDashArray="2 3" StrokeDashCap="Round" StrokeDashOffset="1"
                             RenderTransformOrigin="0.5,0.5" Opacity="0.3">
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="RotateTransform" Angle="0"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                </Grid>

                <!-- 提示信息 -->
                <TextBlock Text="一分钟后可返回工作" 
                           FontSize="22" 
                           Foreground="#6C7086" 
                           Margin="0,40,0,30"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- 底部按钮区域 - 已优化去除白色边缘 -->
            <Grid VerticalAlignment="Bottom" Height="90">
                <!-- 底部装饰 - 与主背景无缝融合 -->
                <Path Data="M0,0 L1280,0 1280,30 C640,60 640,60 0,30 Z" 
                      Fill="#1E1E2E" 
                      Opacity="1"
                      VerticalAlignment="Top"/>

                <!-- 按钮容器 - 无缝融合设计 -->
                <Border Background="#1E1E2E" 
                         Height="80"
                         VerticalAlignment="Bottom"
                         Margin="0,0,0,10">
                    <Grid>
                        <!-- 返回按钮 - 优化设计 -->
                        <Button x:Name="ReturnButton"
                                Content="返回工作"
                                Width="200"
                                Height="50"
                                FontSize="20"
                                FontWeight="Medium"
                                Foreground="#CDD6F4"
                                Background="Transparent"
                                BorderThickness="1.5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                IsEnabled="False"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <!-- 边框设计 -->
                                                <Border 
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="25">
                                                    <ContentPresenter 
                                                        HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="BorderBrush" Value="#6C7086"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="BorderBrush" Value="#6C7086"/>
                                            <Setter Property="Foreground" Value="#6C7086"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="#89B4FA"/>
                                            <Setter Property="Foreground" Value="#89B4FA"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect 
                                                        BlurRadius="15" 
                                                        ShadowDepth="0"
                                                        Color="#89B4FA"
                                                        Opacity="0.7"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="BorderBrush" Value="#CBA6F7"/>
                                            <Setter Property="Foreground" Value="#CBA6F7"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>