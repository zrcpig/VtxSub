<!--TodoWindow.xaml-->
<Window x:Class="MainApp.TodoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="待办事项管理" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button x:Name="AddButton" Content="添加任务" Padding="10,5" Margin="0,0,10,0" Click="AddButton_Click"/>
            <Button x:Name="RefreshButton" Content="刷新" Padding="10,5" Click="RefreshButton_Click"/>
        </StackPanel>

        <!-- 任务列表 -->
        <TreeView x:Name="TodoTreeView" Grid.Row="1" Margin="10">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsCompleted}" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Title}" FontSize="14"/>
                        <TextBlock Text="{Binding DueDate, StringFormat=' (截止: {0:yyyy-MM-dd})'}"
                                   Foreground="Red" FontSize="12" Margin="5,0"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <!-- 状态栏 -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText">就绪</TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
